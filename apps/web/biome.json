{
  "root": false,
  "extends": "//",
  "files": {
    "experimentalScannerIgnores": ["ui"]
  },
  "linter": {
    "domains": {
      "next": "all",
      "solid": "none"
    },
    "rules": {
      "style": {
        "recommended": true,
        "noDefaultExport": "off",
        "useComponentExportOnlyModules": "off",
        "noProcessEnv": "off"
      },
      "suspicious": {
        "recommended": true,
        "noUnknownAtRules": "off",
        "noReactSpecificProps": "off"
      },
      "performance": {
        "recommended": true,
        "noNamespaceImport": "off"
      }
    }
  }
}
