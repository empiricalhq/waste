{
  "name": "@lima-garbage/database",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",

    "db:push": "bun --env-file=../../.env drizzle-kit push --config ./drizzle.config.ts --force",
    "setup:admin": "bun --env-file=../../.env scripts/create-admin.ts",
    "db:seed": "bun --env-file=../../.env scripts/seed.ts",

    "db:push:test": "bun --env-file=../../.env.test drizzle-kit push --config ./drizzle.config.ts --force",
    "setup:admin:test": "bun --env-file=../../.env.test scripts/create-admin.ts",

    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",

    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write ."
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@paralleldrive/cuid2": "^3.1.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "prettier": "3.6.2"
  }
}
